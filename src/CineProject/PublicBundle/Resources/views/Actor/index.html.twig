{% extends 'CineProjectPublicBundle::layout.html.twig' %}

{% block body %}
    <h1>Actors list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}

            <tr>
                <td><a href="{{ path('actor_show', { 'slug': actor.slug }) }}">{{ actor.id }}</a></td>
                <td>
                    {% if actor.image %}
                        <img src="{{ asset(actor.image.getWebPath()) }}">
                    {% endif %}
                </td>
                <td>{{ actor.firstName }}</td>
                <td>{{ actor.lastName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actor_show', { 'slug': actor.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('actor_edit', { 'slug': actor.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(actors) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('actor_new') }}">Create a new actor</a>
        </li>
    </ul>
{% endblock %}
