{% extends 'CineProjectPublicBundle::layout.html.twig' %}
{% block title %}films{% endblock %}
{% block body %}
	<ul>
		{% for movie in movies %}
			<li>
				<h4>{{ movie.title }}</h4>
				<p>{{ movie.description|nl2br }}</p>
				<p>{{ movie.createdAt|date('d/m/Y') }}</p>
			</li>
		{% endfor %}
	</ul>
{% endblock %}